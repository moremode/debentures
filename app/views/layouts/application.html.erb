<!DOCTYPE html>
<html>
<head>
  <title>Debentures</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
</head>

<body>
<ul id="main-nav-container">
  <a href="/auth" class="container-href">
    <div class="main-nav-element-container">
      <li class="main-nav-element">АВТОРИЗАЦИЯ</li>
    </div>
  </a><a href="/reg" class="container-href">
  <div class="main-nav-element-container">
    <li class="main-nav-element">РЕГИСТРАЦИЯ</li>
  </div>
</a>
  <% if (session[:name] != nil and session[:name] != '') %>
    <a href="/generate" class="container-href">
      <div class="main-nav-element-container">
        <li class="main-nav-element">СОЗДАНИЕ РАСПИСКИ</li>
      </div>
    </a>
    <div class="main-nav-user-element">
      <a href="" class="container-href">
        <div class="main-nav-element-container">
          <li class="main-nav-element"><%= session[:name].upcase %></li>
        </div>
      </a>
      <a href="" class="container-href">
        <div class="main-nav-element-container" onclick="document.location = '/logout'">
          <li class="main-nav-element">ВЫХОД</li>
        </div>
      </a>
    </div>
  <% end %>
</ul>
<div class="all-container">
  <%= yield %>
</div>
</body>
</html>
