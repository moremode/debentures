<div class="auth-table-container">
  <div class="auth-main-container">
    <div class="auth-field-container">
      <h2 class="reg-name-h2">Авторизация</h2>
      <% if flash[:error] != nil && flash[:error] != '' %>
        <h3 class="error-message"><%= flash[:error] %></h3>
      <% end %>
      <form action="/auth" method="post" class="auth-form">
        <h3>Логин</h3>
        <a href="/reg" class="auth-form-href">Нет аккаунта?</a>
        <input type="text" name="username" class="auth-text-input">
        <h3>Пароль</h3>
        <input type="password" name="password" class="auth-text-input">
        <div class="center-align-div-container">
          <input type="submit" class="auth-submit-button" value="ВОЙТИ">
        </div>
      </form>
    </div>
  </div>
</div>
<style>
    .all-container
    {
      background: transparent;
    }
    body
    {
      background-image: linear-gradient(45deg, #169f00, #009f77);
    }
    #main-nav-container
    {
      box-shadow: 0px 0px 0px black;
    }
    .nav-underline
    {
      background-image: linear-gradient(white, white);
    }
</style>