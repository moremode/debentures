<script>
    $( "#reg-form-username" ).change(changed);

  function changed()
  {
    $.ajax({

        type:'post',
        url:'/check-username',
        data:{'username': $('#reg-form-username').val()},
        response:'text',
        success:function (data) {
            if (data == 'true')
            {
                $('#reg-check-answer').text('✓');
                $('#reg-check-answer').css('color', 'green');
            }
            else if (data == 'false')
            {
                $('#reg-check-answer').text('✗');
                $('#reg-check-answer').css('color', 'red');
            }
            else
            {
                $('#reg-check-answer').text('');
            }
      }

  });

  }
</script>