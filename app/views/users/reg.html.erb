        <span id="reg-check-answer"></span>
        <h3>Пароль</h3>
        <input type="password" name="password" class="auth-text-input">
        <div class="center-align-div-container">
          <input type="submit" class="auth-submit-button" value="СОЗДАТЬ">
        </div>
      </form>
